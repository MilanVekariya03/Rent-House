<% include ../partials/header %>

<!-- Optional: Animate.css CDN (for fade/slide effects) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

<div class="container my-5">
    <div class="row">
        <!-- Profile Column -->
        <div class="col-lg-4 mb-4 animate__animated animate__fadeInLeft" style="margin-top: 2rem;">
            <div class="card shadow-sm border-0 rounded profile-card-custom">
                <div class="card-body text-center">
                    <!-- Avatar -->
                    <div class="profile-avatar mb-3 mx-auto">
                        <% if (user.avatar && user.avatar.length > 0) { %>
                            <img src="<%= user.avatar %>" alt="Avatar" class="rounded-circle img-fluid" style="width: 110px; height: 110px; object-fit: cover; border: 4px solid #667eea; background: #fff;">
                        <% } else { %>
                            <div class="d-flex align-items-center justify-content-center rounded-circle" style="width: 110px; height: 90px; border: 4px solid #667eea; background: #fff;">
                                <i class="fas fa-user" style="font-size: 64px; color: #667eea;"></i>
                            </div>
                        <% } %>
                    </div>
                    <!-- Username -->
                    <div class="mb-3" style="text-align: left;">
                        <h3 class="fw-bold mb-2" style="color: #222; letter-spacing: 0.5px; text-align: left;">
                            <span class="fw-semibold" style="color: #888;">Username:</span>
                            <%= user.username %>
                        </h3>
                        <div class="mb-2" style="color: #444; text-align: left;">
                            <span class="fw-semibold" style="color: #888;">Full Name:</span>
                            <span class="fw-normal" style="color: #222;"><%= user.firstName %> <%= user.lastName %></span>
                        </div>
                        <div class="mb-2" style="text-align: left;">
                            <span class="fw-semibold" style="color: #888;">Email:</span>
                            <a href="mailto:<%= user.email %>" class="fw-normal text-decoration-none" style="color: #667eea;">
                                <%= user.email %>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Listings Column -->
        <div class="col-lg-8 animate__animated animate__fadeInRight">
            <div class="card shadow-sm border-0 rounded p-4">
                <h4 class="mb-4" style="font-weight: 600; color: #444;">
                    <%= user.username %>'s Property Listings
                </h4>

                <% if (houses.length === 0) { %>
                    <div class="alert alert-warning">No listings found for this user.</div>
                <% } else { %>
                    <div class="row g-4">
                        <% houses.forEach((house) => { %>
                            <div class="col-md-6">
                                <div class="card h-100 shadow-sm border-0 hover-shadow transition">
                                    <div style="width: 100%; overflow: hidden; border-top-left-radius: .5rem; border-top-right-radius: .5rem;">
                                        <img src="<%= house.image %>" class="card-img-top" alt="<%= house.name %>" style="width: 100%; height: 200px; object-fit: cover; display: block;">
                                    </div>
                                    <div class="card-body d-flex flex-column justify-content-between">
                                        <div style="padding-left: 16px;">
                                            <h5 class="card-title mb-1" style="font-weight: 600;">
                                                Property Name : <%= house.name %>
                                            </h5>
                                            <% if (house.location) { %>
                                            <p class="text-muted small mb-2">
                                                City : <%= house.location %>
                                            </p>
                                            <% } %>
                                        </div>
                                        <a href="/houses/<%= house.id %>" class="btn btn-outline-primary btn-sm mt-auto w-100">View Details</a>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>

<!-- Optional Custom Hover Shadow and Profile Card Styling -->
<style>
    .hover-shadow:hover {
        transform: scale(1.02);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }
    .transition {
        transition: all 0.3s ease-in-out;
    }
    .profile-card-custom {
        background: linear-gradient(135deg, #f8fafc 60%, #e9eafc 100%);
        border-radius: 1rem !important;
        box-shadow: 0 4px 24px rgba(102, 126, 234, 0.08);
    }
    .profile-avatar img,
    .profile-avatar .rounded-circle {
        box-shadow: 0 2px 12px rgba(102, 126, 234, 0.12);
    }
    @media (max-width: 991px) {
        .profile-card-custom {
            margin-bottom: 2rem;
        }
    }
</style>
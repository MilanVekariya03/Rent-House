<% include ./partials/header %>

<!-- Enhanced Hero Section -->
<div class="contact-hero" style="background-image: url('/uploads/contact3.jpg'); background-size: 100% auto; background-position: center top -90px; background-repeat: no-repeat;">
    <div class="hero-overlay"></div>
    <div class="container">
        <div class="hero-content text-center" style="padding-top: 0; padding-bottom: 40px;">
            <h1 class="hero-title" style="font-size:4rem; margin-top: 0;">Get In Touch</h1>
            <p class="hero-subtitle" style="font-size:1.7rem;">We'd love to hear from you. Send us a message and we'll respond as soon as possible.</p>
            <div class="hero-decoration">
                <div class="decoration-line"></div>
                <div class="decoration-dot"></div>
                <div class="decoration-line"></div>
            </div>
        </div>
    </div>
</div>

<!-- Contact Section -->
<div class="contact-section">
    <div class="container">
        <div class="row">
            <!-- Contact Information -->
            <div class="col-lg-5 mb-5 mb-lg-0">
                <div class="contact-info-card">
                    <div class="card-header">
                        <h3>
                            <i class="fas fa-address-card" style="margin-right: 12px;"></i>
                            Contact Information
                        </h3>
                        <p>Reach out to us through any of these channels</p>
                    </div>
                    
                    <div class="contact-items">
                        <div class="contact-item">
                            <div class="contact-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div class="contact-details">
                                <h5>Email</h5>
                                <p><a href="mailto:info@rentahouse.com">info@rentahouse.com</a></p>
                                <small>We'll respond within 24 hours</small>
                            </div>
                        </div>
                        
                        <div class="contact-item">
                            <div class="contact-icon">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div class="contact-details">
                                <h5>Phone</h5>
                                <p><a href="tel:+1234567890">+1 (234) 567-8900</a></p>
                                <small>Mon-Fri: 9AM-6PM EST</small>
                            </div>
                        </div>
                        
                        <div class="contact-item">
                            <div class="contact-icon">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div class="contact-details">
                                <h5>Office</h5>
                                <p>123 Business Street<br>Suite 100<br>New York, NY 10001</p>
                                <small>United States</small>
                            </div>
                        </div>
                        
                        <div class="contact-item">
                            <div class="contact-icon">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="contact-details">
                                <h5>Business Hours</h5>
                                <p>Monday - Friday: 9:00 AM - 6:00 PM<br>
                                Saturday: 10:00 AM - 4:00 PM<br>
                                Sunday: Closed</p>
                            </div>
                        </div>
                    </div>
                    
                    
                </div>
            </div>
            
            <!-- Contact Form -->
            <div class="col-lg-7">
                <div class="contact-form-card">
                    <div class="card-header">
                        <h3>
                            <i class="fas fa-paper-plane" style="margin-right: 16px;"></i>
                            Send Message
                        </h3>
                        <% if(currentUser) { %>
                            <p>Hello <strong><%= currentUser.username %></strong>! How can we help you today?</p>
                        <% } else { %>
                            <p>Tell us about your inquiry and we'll get back to you promptly.</p>
                        <% } %>
                    </div>
                    
                    <form action="/contact" method="POST" class="contact-form">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="name">Full Name *</label>
                                    <% if(currentUser && (currentUser.firstName || currentUser.lastName)) { %>
                                        <input type="text" class="form-control" id="name" name="name" 
                                               value="<%= ((currentUser.firstName || '') + ' ' + (currentUser.lastName || '')).trim() %>" 
                                               placeholder="Enter your full name" required>
                                    <% } else { %>
                                        <input type="text" class="form-control" id="name" name="name" 
                                               placeholder="Enter your full name" required>
                                    <% } %>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email">Email Address *</label>
                                    <% if(currentUser && currentUser.email) { %>
                                        <input type="email" class="form-control" id="email" name="email" 
                                               value="<%= currentUser.email %>" 
                                               placeholder="Enter your email address" readonly required>
                                        <small class="form-text">Your registered email address</small>
                                    <% } else { %>
                                        <input type="email" class="form-control" id="email" name="email" 
                                               placeholder="Enter your email address" required>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="subject">Subject *</label>
                            <input type="text" class="form-control" id="subject" name="subject" 
                                   placeholder="What is this regarding?" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="message">Message *</label>
                            <textarea class="form-control" id="message" name="message" rows="5" 
                                      placeholder="Please describe your inquiry in detail..." required></textarea>
                        </div>
                        
                        <div class="form-group">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="newsletter" name="newsletter">
                                <label class="form-check-label" for="newsletter">
                                    Subscribe to our newsletter for updates and special offers
                                </label>
                            </div>
                        </div>
                        
                        <button type="submit" class="submit-btn">
                            <i class="fas fa-paper-plane me-2"></i>
                            Send Message
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Map Section (Optional) -->
<div class="map-section">
    <div class="container">
        <div class="text-center mb-4">
            <h3>Find Our Office</h3>
            <p>Visit us at our convenient downtown location</p>
        </div>
        <div class="map-embed" style="width: 100%; max-width: 800px; margin: 0 auto; border-radius: 12px; overflow: hidden; box-shadow: 0 2px 16px rgba(102,126,234,0.13); position: relative;">
            <!-- Google Maps Embed for Surat, Gujarat (matches footer address) -->
            <iframe
                src="https://www.google.com/maps?q=305,+Sunshine+Complex,+Mota+Varachha,+Surat,+Gujarat+394101&output=embed"
                width="100%"
                height="400"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="HOMI VERSE Office Location"
            ></iframe>
            <!-- Arrow pointing to address below -->
            <div style="position: absolute; left: 50%; bottom: -32px; transform: translateX(-50%); z-index: 2;">
                <i class="fas fa-arrow-down" style="font-size: 2.2rem; color: #667eea; text-shadow: 0 2px 8px #fff;"></i>
            </div>
        </div>
        <div class="text-center mt-4" style="margin-top: 48px;">
            <span style="font-size: 1.15rem; font-weight: 600; color: #333;">
                <i class="fas fa-map-marker-alt" style="color: #e53935; margin-right: 6px;"></i>
                305, Sunshine Complex, Mota Varachha, Surat, Gujarat 394101
            </span>
        </div>
    </div>
</div>

<% include ./partials/footer %>

